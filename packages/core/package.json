    "@rivetkit/bare-compiler": "workspace:*",
    "@types/invariant": "^2",
    "@types/node": "^22.13.1",
    "@types/ws": "^8",
    "@vitest/ui": "3.1.1",
    "bundle-require": "^5.1.0",
